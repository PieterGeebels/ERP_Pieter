<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_warranty_methods_form" model="ir.ui.view">
            <field name="model">xx.warranty.method</field>
            <field name="arch" type="xml">
                <tree string="Warranty Methods" editable="bottom">
                    <field name="xx_name"/>
                    <field name="xx_warranty"/>
                    <field name="xx_amount"/>
                </tree>
            </field>
        </record>
        
        <record id="action_warranty_method" model="ir.actions.act_window">
            <field name="name">Warranty Methods</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">xx.warranty.method</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>
        
        <menuitem id="menu_warranty_methods" action="action_warranty_method" parent="base.menu_base_config"/>

    </data>
</openerp>